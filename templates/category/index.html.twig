{% extends 'base_admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

    <style>
        *{
            font-family: "Times New Roman";
        }

        h1{
            font-family: "Times New Roman";
            text-align: center;
        }
    </style>
    <h1>Category Management</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="col-md-2">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-outline-dark">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-dark">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
