{% extends 'base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <style>
        *{
            font-family: "Times New Roman";
        }

        h1{
            font-family: "Times New Roman";
            text-align: center;
        }
    </style>
    <section>
        <h1>Product Management</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.image }}</td>
                    <td class="col-md-1">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-dark">show</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-dark">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_product_new') }}" class="btn btn-outline-dark">Create new</a>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

{% endblock %}
