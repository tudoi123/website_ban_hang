

{% block title %}{% endblock %}



    {% block body %}

        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: "Poppins", sans-serif;
            }

            .register-container {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                background-image: url("./images/background.jpg");
                background-size: cover;
                background-position: center;
                color: #fff;
            }

            h1 {
                text-align: center;
                font-size: 2em;
            }

            .form-group {
                position: relative;
                margin-bottom: 1.5rem;
            }

            label {
                display: block;
                margin-bottom: 0.5rem;
            }

            .form-control {
                width: 100%;
                height: 30px;
                padding: 0.375rem 0.75rem;
                font-size: 1em;
                background: transparent;
                border: none;
                outline: none;
                color: #fff;
                border-bottom: 2px solid rgba(255, 255, 255, 0.5);
            }

            .form-control:focus {
                border-bottom: 2px solid #fff;
            }

            .register-link {
                text-align: center;
                margin-top: 1rem;
                color: #fff;
            }

            .register-link a {
                color: #fff;
            }

            .btn {
                width: 100%;
                height: 40px;
                background: #fff;
                border: none;
                outline: none;
                border-radius: 40px;
                cursor: pointer;
                font-size: 1em;
                color: #000;
                font-weight: 500;
            }

            .register-form .icon{
                position: absolute;
                right: 8px;
                color: #fff;
                font-size: 1.2em;
                line-height: 57px;
            }
        </style>

            

        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>




{% endblock %}
